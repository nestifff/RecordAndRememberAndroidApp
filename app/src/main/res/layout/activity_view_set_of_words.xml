<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_type_of_set_to_view"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:background="#C1C1C1"
        android:text="default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_size_words_set"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:background="#C1C1C1"
        android:text="default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_of_set_to_view" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_set_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_size_words_set" />


</androidx.constraintlayout.widget.ConstraintLayout>